@model List<StudentHousingApp.Models.Property>

<h2>My Properties</h2>

<table class="table">
    <thead>
        <tr>
            <th>Property ID</th>
            <th>Address</th>
            <th>Rent Amount</th>
            <th>Description</th>
            <th>Is Available</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var property in Model)
        {
            <tr>
                <td>@property.PropertyID</td>
                <td>@property.Address</td>
                <td>@property.RentAmount</td>
                <td>@property.Description</td>
                <td>@(property.IsAvailable ? "Yes" : "No")</td>
            </tr>
        }
    </tbody>
</table>

<p>
    <dd class="col-sm-10"><a asp-action="PropertyCreate" asp-controller="Property" asp-route-id="">Create a new Property Listing</a></dd>

</p>
