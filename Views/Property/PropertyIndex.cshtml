@model List<StudentHousingApp.Models.Property>

<h2>All Properties</h2>

<table class="table">
    <thead>
        <tr>
            <th>Property ID</th>
            <th>Landlord ID</th>
            <th>Address</th>
            <th>Rent Amount</th>
            <th>Description</th>
            <th>Is Available</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var property in Model)
        {
            <tr>
                <td>@property.PropertyID</td>
                <td>@property.TempLandlordID</td>
                <td>@property.Address</td>
                <td>@property.RentAmount</td>
                <td>@property.Description</td>
                <td>@(property.IsAvailable ? "Yes" : "No")</td>
                <td><a asp-controller="Property" asp-action="PropertyDetails" asp-route-id="@property.PropertyID">Details</a></td>
            </tr>
        }
    </tbody>
</table>