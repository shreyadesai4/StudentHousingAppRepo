@model StudentHousingApp.Models.Property

<h2>Create Property</h2>

<form asp-action="PropertyCreate" method="post">
    <div class="form-group">
        <label for="Address">Address:</label>
        <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address" />
    </div>
    <div class="form-group">
        <label for="RentAmount">Rent Amount:</label>
        <input type="text" class="form-control" id="RentAmount" name="RentAmount" value="@Model.RentAmount" />
    </div>
    <div class="form-group">
        <label for="Description">Description:</label>
        <textarea class="form-control" id="Description" name="Description">@Model.Description</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<p>
    <a asp-action="PropertyIndex">Back to Property List</a>
</p>
