@model StudentHousingApp.Models.Property

<h2>Create Property</h2>

<form asp-action="PropertyCreate" method="post">
    <div class="form-group">
        <label for="TempLandlordID">Landlord ID:</label>
        <input type="text" class="form-control" id="TempLandlordID" name="TempLandlordID" value="@Model.TempLandlordID" />
        <span asp-validation-for="TempLandlordID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Address">Address:</label>
        <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="RentAmount">Rent Amount:</label>
        <input type="text" class="form-control" id="RentAmount" name="RentAmount" value="@Model.RentAmount" />
        <span asp-validation-for="RentAmount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Description">Description:</label>
        <textarea class="form-control" id="Description" name="Description">@Model.Description</textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="IsAvailable">Is Available:</label>
        <div>
            <input type="radio" id="IsAvailableYes" name="IsAvailable" value="true" checked>
            <label for="IsAvailableYes">Yes</label>
        </div>
        <div>
            <input type="radio" id="IsAvailableNo" name="IsAvailable" value="false">
            <label for="IsAvailableNo">No</label>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<p>
    <a asp-action="PropertyIndex">Back to Property List</a>
</p>
